<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<value>
				/**/number.rpc=numberController
				/**/currentSession.rpc=currentSessionController
				/**/user.rpc=userController
				/**/quote.rpc=quoteController
				/**/client.rpc=clientController
				/**/administration.rpc=administrationController
				/**/job.rpc=jobController
			</value>
		</property>
	</bean>

</beans>